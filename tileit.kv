#: kivy 1.11.1


<TargetCircle>:
    canvas:
        Color:
            rgb: 1,1,1,0.1
        Line: 
            circle: (self.parent.center_x,   self.parent.center_y,  root.parent.safezone_r)


<CenterDot>:
    canvas:
        Color: 
            rgb: 1,0,0,0.1
        Ellipse:
            pos:root.parent.center
            size: (5,5)

<TileGame>:

    canvas:
        Color:
            rgb : 1,1,1,0.1 
        Ellipse:
            id: CG ball
            pos: self.centre_gravity
            size : self.cg_dot_size, self.cg_dot_size
 

    Label:
        font_size: 30
        center_x: root.width / 3
        top: root.top * 0.75
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top *0.8
        text: root.status
    Label:
        id: touch_counter
        font_size:50
        center_x : root.width / 8
        text: root.num_points
    
    Label:
        id: lives left
        font_size: 40
        text: "Lives left"
        center_x : root.width * 0.8
        top : root.top*0.1
    Label:
        id: lives left
        font_size: 40
        text: str(root.lives_left)
        center_x : root.width * 0.8
        top : root.top*0.2
        
    
    TargetCircle:
        id: safe_circle
    
    CenterDot:
        id: miaow
    
    
