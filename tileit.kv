#: kivy 1.11.1


<TargetCircle>:
    canvas:
        Color:
            rgb: 0,1,1,0.1
        Line: 
            circle: (self.parent.center_x,   self.parent.center_y,  root.parent.safezone_r)
            width : 2

<CenterDot>:
    canvas:
        Color: 
            rgb: 1,0,0,0.1
        Ellipse:
            pos: self.parent.center_x-3.5, self.parent.center_y-3.5
            size: (5,5)

<TileGame>:

    canvas:
        Color:
            rgb : 1,1,1,0.1 

        Ellipse:
            id: CG ball2
            pos: self.centre_gravity[0], self.centre_gravity[1]
            size : self.cg_dot_size, self.cg_dot_size


    Label:
        font_size: 30
        center_x: root.width / 3
        top: root.top * 0.75
    
    Label:
        font_size: 30  
        center_x: root.width * 0.45
        top: root.top *0.99
        text: root.status
    Label:
        id: touch_counter
        font_size: 25
        center_x : root.width * 0.45
        text: root.num_points
    
    Label:
        id: lives left
        font_size: 30
        text: "Lives left"
        center_x : root.width * 0.99
        top : root.top*0.99
    Label:
        id: lives left number
        font_size: 25
        text: str(root.lives_left)
        center_x : root.width *0.99
        top : root.top*0.95
   
    TargetCircle:
        id: safe_circle
    
    CenterDot:
        id: miaow

